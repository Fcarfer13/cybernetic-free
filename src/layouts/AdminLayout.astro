---
import { Colors } from "../styles/colors";
import AdminNavbar from "../components/AdminNavbar.astro";
import MobileMenuToggle from "../components/MobileMenuToggle.astro";

interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <title>{title} - Panel de Administraci√≥n</title>
        <link rel="stylesheet" href="/styles/global.css" />
    </head>
    <body class="admin-body">
        <AdminNavbar />
        <MobileMenuToggle />
        <main class="admin-main">
            <slot />
        </main>
    </body>
</html>

<style define:vars={{ primary: Colors.white, secondary: Colors.darkLighter }}>
    .admin-body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
    }

    .admin-main {
        flex: 1;
        margin-left: 280px;
        padding: 2rem;
        min-height: 100vh;
    }

    @media (max-width: 768px) {
        .admin-main {
            margin-left: 0;
            padding: 1rem;
        }
    }
</style> 