---
import Layout from "../layouts/Layout.astro";
import { Footer } from "../modules/Footer";
import { Hero } from "@modules/Hero";
---

<Layout
    title="A la Carta | Hospedajes"
    description="Descubre los diferentes tipos de hospedajes disponibles en Villanueva"
>
    <main class="page-content">
        <Hero
        heroType="fullPageSlider"
        client:visible
        data={[{
            background: "https://lacontradejaen.eldiario.es/img/galeria/2019/07/villanueva_arzobispo_panoramica_jaen-44.jpg",
            title: "HOSPEDAJES",
            paragraph:
                "DESCUBRE LOS DIFERENTES TIPOS DE HOSPEDAJES DISPONIBLES EN VILLANUEVA",
 
        }]}
    />
        

        <section class="accommodations-section">
            <div class="container">
                <!-- Hoteles -->
                <div class="accommodation-category">
                    <div class="category-header">
                        <h2>Hoteles</h2>
                        <p class="category-description">Disfruta de una estancia confortable con todos los servicios</p>
                    </div>
                    <div class="accommodations-grid">
                        <div class="accommodation-card">
                            <div class="card-image">
                                <img src="/images/accommodations/hotel-1.jpg" alt="Hotel Central" />
                                <div class="card-overlay">
                                    <a href="/reservas?tipo=hotel&id=1" class="reserve-button">Reservar</a>
                                </div>
                            </div>
                            <div class="card-content">
                                <h3>Hotel Central</h3>
                                <p>Hotel de 4 estrellas en el corazón de Villanueva con vistas panorámicas</p>
                                <div class="accommodation-info">
                                    <div class="info-item">
                                        <i class="icon-location"></i>
                                        <span>Centro de Villanueva</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="icon-star"></i>
                                        <span>4 estrellas</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="icon-price"></i>
                                        <span>Desde 80€/noche</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="accommodation-card">
                            <div class="card-image">
                                <img src="/images/accommodations/hotel-2.jpg" alt="Hotel Rural" />
                                <div class="card-overlay">
                                    <a href="/reservas?tipo=hotel&id=2" class="reserve-button">Reservar</a>
                                </div>
                            </div>
                            <div class="card-content">
                                <h3>Hotel Rural</h3>
                                <p>Encantador hotel rural con encanto y ambiente familiar</p>
                                <div class="accommodation-info">
                                    <div class="info-item">
                                        <i class="icon-location"></i>
                                        <span>Zona Rural</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="icon-star"></i>
                                        <span>3 estrellas</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="icon-price"></i>
                                        <span>Desde 60€/noche</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Casas Rurales -->
                <div class="accommodation-category">
                    <div class="category-header">
                        <h2>Casas Rurales</h2>
                        <p class="category-description">Experimenta la auténtica vida rural</p>
                    </div>
                    <div class="accommodations-grid">
                        <div class="accommodation-card">
                            <div class="card-image">
                                <img src="/images/accommodations/casa-rural-1.jpg" alt="Casa Rural El Molino" />
                                <div class="card-overlay">
                                    <a href="/reservas?tipo=casa-rural&id=1" class="reserve-button">Reservar</a>
                                </div>
                            </div>
                            <div class="card-content">
                                <h3>Casa Rural El Molino</h3>
                                <p>Antiguo molino restaurado con encanto y vistas al río</p>
                                <div class="accommodation-info">
                                    <div class="info-item">
                                        <i class="icon-location"></i>
                                        <span>Zona Rural</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="icon-bed"></i>
                                        <span>4 dormitorios</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="icon-price"></i>
                                        <span>Desde 120€/noche</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="accommodation-card">
                            <div class="card-image">
                                <img src="/images/accommodations/casa-rural-2.jpg" alt="Cortijo La Sierra" />
                                <div class="card-overlay">
                                    <a href="/reservas?tipo=casa-rural&id=2" class="reserve-button">Reservar</a>
                                </div>
                            </div>
                            <div class="card-content">
                                <h3>Cortijo La Sierra</h3>
                                <p>Tradicional cortijo andaluz con piscina y jardín</p>
                                <div class="accommodation-info">
                                    <div class="info-item">
                                        <i class="icon-location"></i>
                                        <span>Sierra de Villanueva</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="icon-bed"></i>
                                        <span>6 dormitorios</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="icon-price"></i>
                                        <span>Desde 150€/noche</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Caravanas -->
                <div class="accommodation-category">
                    <div class="category-header">
                        <h2>Caravanas</h2>
                        <p class="category-description">Vive una experiencia única en contacto con la naturaleza</p>
                    </div>
                    <div class="accommodations-grid">
                        <div class="accommodation-card">
                            <div class="card-image">
                                <img src="/images/accommodations/caravana-1.jpg" alt="Área de Caravanas Río Verde" />
                                <div class="card-overlay">
                                    <a href="/reservas?tipo=caravana&id=1" class="reserve-button">Reservar</a>
                                </div>
                            </div>
                            <div class="card-content">
                                <h3>Área de Caravanas Río Verde</h3>
                                <p>Área de caravanas junto al río con todas las comodidades</p>
                                <div class="accommodation-info">
                                    <div class="info-item">
                                        <i class="icon-location"></i>
                                        <span>Río Verde</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="icon-tent"></i>
                                        <span>Parcelas y Servicios</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="icon-price"></i>
                                        <span>Desde 15€/noche</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="accommodation-card">
                            <div class="card-image">
                                <img src="/images/accommodations/caravana-2.jpg" alt="Área de Caravanas La Sierra" />
                                <div class="card-overlay">
                                    <a href="/reservas?tipo=caravana&id=2" class="reserve-button">Reservar</a>
                                </div>
                            </div>
                            <div class="card-content">
                                <h3>Área de Caravanas La Sierra</h3>
                                <p>Área de caravanas en plena naturaleza con actividades al aire libre</p>
                                <div class="accommodation-info">
                                    <div class="info-item">
                                        <i class="icon-location"></i>
                                        <span>Sierra de Villanueva</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="icon-tent"></i>
                                        <span>Parcelas y Servicios</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="icon-price"></i>
                                        <span>Desde 12€/noche</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <style>
        .page-content {
            min-height: calc(100vh - 400px);
        }

        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0)),
                        url('https://lacontradejaen.eldiario.es/img/galeria/2019/07/villanueva_arzobispo_panoramica_jaen-44.jpg');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 6rem 0;
            text-align: center;
            position: relative;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.6));
            z-index: 1;
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero-section h1 {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            color: #fff;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            max-width: 700px;
            margin: 0 auto 3rem;
            line-height: 1.6;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
            color: #fff;
        }

        .hero-stats {
            display: flex;
            justify-content: center;
            gap: 4rem;
            margin-top: 3rem;
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            display: block;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: #fff;
        }

        .stat-label {
            font-size: 1rem;
            opacity: 0.9;
            color: #fff;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        .accommodations-section {
            padding: 5rem 0;
            background-color: #f5f5f5;
        }

        .accommodation-category {
            margin-bottom: 5rem;
        }

        .category-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .accommodation-category h2 {
            color: #333;
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .category-description {
            color: #666;
            font-size: 1.25rem;
            max-width: 600px;
            margin: 0 auto;
        }

        .accommodations-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2.5rem;
        }

        .accommodation-card {
            background: white;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .accommodation-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

        .card-image {
            position: relative;
            height: 250px;
            overflow: hidden;
        }

        .card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .accommodation-card:hover .card-image img {
            transform: scale(1.05);
        }

        .card-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .accommodation-card:hover .card-overlay {
            opacity: 1;
        }

        .reserve-button {
            background: #fff;
            color: #333;
            padding: 0.8rem 1.5rem;
            border-radius: 0.25rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .reserve-button:hover {
            background: #333;
            color: #fff;
            transform: translateY(-2px);
        }

        .card-content {
            padding: 1.5rem;
        }

        .accommodation-card h3 {
            color: #333;
            font-size: 1.5rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .accommodation-card p {
            color: #666;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .accommodation-info {
            background: #f8f9fa;
            border-radius: 0.25rem;
            padding: 1rem;
        }

        .info-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }

        .info-item:last-child {
            margin-bottom: 0;
        }

        .info-item i {
            margin-right: 0.75rem;
            color: #333;
            font-size: 1.1rem;
        }

        .info-item span {
            color: #666;
            font-size: 0.9rem;
        }

        @media (max-width: 1024px) {
            .hero-section h1 {
                font-size: 3rem;
            }

            .hero-stats {
                gap: 2rem;
            }

            .accommodations-grid {
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            }
        }

        @media (max-width: 768px) {
            .hero-section {
                padding: 4rem 0;
            }

            .hero-section h1 {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.25rem;
            }

            .hero-stats {
                flex-direction: column;
                gap: 1.5rem;
            }

            .accommodations-section {
                padding: 3rem 0;
            }

            .accommodation-category {
                margin-bottom: 4rem;
            }

            .accommodation-category h2 {
                font-size: 2rem;
            }

            .category-description {
                font-size: 1.1rem;
            }

            .accommodations-grid {
                gap: 2rem;
            }
        }

        @media (max-width: 480px) {
            .hero-section h1 {
                font-size: 2rem;
            }

            .hero-subtitle {
                font-size: 1.1rem;
            }

            .accommodations-grid {
                grid-template-columns: 1fr;
            }

            .card-content {
                padding: 1.25rem;
            }
        }
    </style>

    <Footer />
</Layout> 