</Layout>

<style>
    .personajes-page {
        padding-bottom: 4rem;
    }

    .personajes-grid {
        padding: 4rem 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .personaje-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        transition: transform 0.3s ease;
    }

    .personaje-card:hover {
        transform: translateY(-5px);
    }

    .personaje-card img {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

    .card-content {
        padding: 2rem;
    }

    .card-content h2 {
        font-size: 1.8rem;
        margin-bottom: 1rem;
        color: #333;
    }

    .card-content p {
        color: #666;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .card-details {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .card-details p {
        margin: 0.5rem 0;
        color: #444;
    }

    /* Estilos del botón de WhatsApp */
    .whatsapp-button {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #25D366;
        color: white;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        z-index: 9999;
        cursor: pointer;
    }

    .whatsapp-button:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
    }

    .whatsapp-button svg {
        width: 32px;
        height: 32px;
        fill: white;
    }

    @media (max-width: 768px) {
        .personajes-grid {
            padding: 2rem 0;
        }

        .personaje-card img {
            height: 250px;
        }

        .card-content {
            padding: 1.5rem;
        }

        .card-content h2 {
            font-size: 1.5rem;
        }

        .whatsapp-button {
            width: 50px;
            height: 50px;
        }

        .whatsapp-button svg {
            width: 28px;
            height: 28px;
        }
    }

    @media (max-width: 480px) {
        .personaje-card img {
            height: 200px;
        }

        .card-content {
            padding: 1rem;
        }

        .card-content h2 {
            font-size: 1.3rem;
        }

        .whatsapp-button {
            width: 45px;
            height: 45px;
            bottom: 15px;
            right: 15px;
        }

        .whatsapp-button svg {
            width: 24px;
            height: 24px;
        }
    }
</style> 