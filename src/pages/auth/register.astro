---
import Layout from "../../layouts/Layout.astro";
import { Button } from "../../components/Button";
---

<Layout 
  title="Registro | Villanueva" 
  description="Crea una cuenta en Villanueva"
>
  <div class="register-page">
    <div class="register-container">
      <h1>Crear Cuenta</h1>
      <p>Regístrate para acceder a todos los servicios</p>
      
      <form id="registerForm">
        <div class="form-group">
          <label>Nombre Completo</label>
          <input 
            type="text" 
            name="name" 
            placeholder="Tu nombre completo"
            required
          />
        </div>

        <div class="form-group">
          <label>Correo Electrónico</label>
          <input 
            type="email" 
            name="email" 
            placeholder="tu@email.com"
            required
          />
        </div>

        <div class="form-group">
          <label>Contraseña</label>
          <input 
            type="password" 
            name="password" 
            placeholder="••••••••"
            required
          />
        </div>

        <div class="form-group">
          <label>Confirmar Contraseña</label>
          <input 
            type="password" 
            name="confirmPassword" 
            placeholder="••••••••"
            required
          />
        </div>

        <div class="form-options">
          <label class="terms">
            <input type="checkbox" name="terms" required />
            <span>Acepto los <a href="#" class="terms-link">términos y condiciones</a></span>
          </label>
        </div>

        <button type="submit">REGISTRARSE</button>

        <div class="login-link">
          <span>¿Ya tienes una cuenta?</span>
          <a href="/auth/login">Inicia sesión aquí</a>
        </div>
      </form>
    </div>
  </div>
</Layout>

<style>
  .register-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #353461;
    padding: 20px;
  }

  .register-container {
    width: 100%;
    max-width: 400px;
  }

  .register-container h1 {
    color: white;
    font-size: 28px;
    margin-bottom: 8px;
  }

  .register-container p {
    color: #999;
    margin-bottom: 30px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    color: white;
    margin-bottom: 8px;
  }

  .form-group input {
    width: 100%;
    padding: 12px 16px;
    background: transparent;
    border: 1px solid #333;
    color: white;
    font-size: 16px;
    transition: all 0.3s;
  }

  .form-group input:focus {
    outline: none;
    border-color: #00ff9d;
  }

  .form-group input::placeholder {
    color: #666;
  }

  .form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .terms {
    display: flex;
    align-items: center;
    color: #999;
    cursor: pointer;
  }

  .terms input {
    margin-right: 8px;
  }

  .terms-link {
    color: #00ff9d;
    text-decoration: none;
  }

  .terms-link:hover {
    text-decoration: underline;
  }

  button {
    width: 100%;
    padding: 14px;
    background: transparent;
    border: 1px solid #333;
    color: white;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s;
  }

  button:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: #00ff9d;
  }

  .login-link {
    margin-top: 20px;
    text-align: center;
    color: #999;
  }

  .login-link a {
    color: #00ff9d;
    text-decoration: none;
    margin-left: 5px;
  }

  .login-link a:hover {
    text-decoration: underline;
  }

  /* Estilo para el autofill */
  input:-webkit-autofill,
  input:-webkit-autofill:hover,
  input:-webkit-autofill:focus {
    -webkit-box-shadow: 0 0 0 30px #1a1a1a inset !important;
    -webkit-text-fill-color: white !important;
  }

  /* Estilo para el checkbox */
  input[type="checkbox"] {
    accent-color: #00ff9d;
  }
</style>

<script>
  document.getElementById('registerForm')?.addEventListener('submit', (e) => {
    e.preventDefault();
    const formData = new FormData(e.target as HTMLFormElement);
    const name = formData.get('name');
    const email = formData.get('email');
    const password = formData.get('password');
    const confirmPassword = formData.get('confirmPassword');
    
    if (password !== confirmPassword) {
      alert('Las contraseñas no coinciden');
      return;
    }
    
    // Aquí iría la lógica de registro
    console.log('Register attempt:', { name, email, password });
  });
</script> 