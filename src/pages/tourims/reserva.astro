---
import Layout from "../../layouts/Layout.astro";
import { Footer } from "../../modules/Footer";
import TourismReservation from "../../components/forms/tourismReservation.astro";

interface Event {
  title: string;
  date: string;
}

const events: Event[] = [
  {
    title: "Tour Plaza de Toros",
    date: "2024-04-15"
  },
  {
    title: "Visita Iglesia",
    date: "2024-04-20"
  }
];
---

<Layout
    title="Reservas | Turismo Villanueva"
    description="Reserva tu visita a los lugares turÃ­sticos de Villanueva"
>
    <main class="page-content">
        <section class="reservation-form">
            <div class="container">
                <TourismReservation events={events} />
            </div>
        </section>
    </main>

    <style>
        .reservation-form {
            padding: 4rem 0;
            background-color: #f8f9fa;
            min-height: calc(100vh - 400px);
            display: flex;
            align-items: center;
        }

        .container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            padding: 0 1rem;
        }
    </style>

    <Footer />
</Layout> 