---
import Layout from "../../layouts/Layout.astro";
---

<Layout 
  title="A la Carta | Login" 
  description="Inicia sesión en tu cuenta de A la Carta"
>
  <div class="login-page">
    <div class="login-container">
      <h1>Bienvenido</h1>
      <p>Inicia sesión en tu cuenta</p>
      
      <form id="loginForm">
        <div class="form-group">
          <label>Correo Electrónico</label>
          <input 
            type="email" 
            name="email" 
            placeholder="tu@email.com"
            required
          />
        </div>

        <div class="form-group">
          <label>Contraseña</label>
          <input 
            type="password" 
            name="password" 
            placeholder="••••••••"
            required
          />
        </div>

        <div class="form-options">
          <label class="remember">
            <input type="checkbox" name="remember" />
            <span>Recordarme</span>
          </label>
          <a href="#" class="forgot">¿Olvidaste tu contraseña?</a>
        </div>

        <button type="submit">INICIAR SESIÓN</button>

        <div class="register-link">
          <span>¿No tienes una cuenta?</span>
          <a href="/auth/register">Regístrate aquí</a>
        </div>
      </form>
    </div>
  </div>
</Layout>

<style>
  .login-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #353461;
    padding: 20px;
  }

  .login-container {
    width: 100%;
    max-width: 400px;
  }

  .login-container h1 {
    color: white;
    font-size: 28px;
    margin-bottom: 8px;
  }

  .login-container p {
    color: #999;
    margin-bottom: 30px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    color: white;
    margin-bottom: 8px;
  }

  .form-group input {
    width: 100%;
    padding: 12px 16px;
    background: transparent;
    border: 1px solid #333;
    color: white;
    font-size: 16px;
    transition: all 0.3s;
  }

  .form-group input:focus {
    outline: none;
    border-color: #00ff9d;
  }

  .form-group input::placeholder {
    color: #666;
  }

  .form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .remember {
    display: flex;
    align-items: center;
    color: #999;
    cursor: pointer;
  }

  .remember input {
    margin-right: 8px;
  }

  .forgot {
    color: #00ff9d;
    text-decoration: none;
    font-size: 14px;
  }

  .forgot:hover {
    text-decoration: underline;
  }

  button {
    width: 100%;
    padding: 14px;
    background: transparent;
    border: 1px solid #333;
    color: white;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s;
  }

  button:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: #00ff9d;
  }

  .register-link {
    margin-top: 20px;
    text-align: center;
    color: #999;
  }

  .register-link a {
    color: #00ff9d;
    text-decoration: none;
    margin-left: 5px;
  }

  .register-link a:hover {
    text-decoration: underline;
  }

  /* Estilo para el autofill */
  input:-webkit-autofill,
  input:-webkit-autofill:hover,
  input:-webkit-autofill:focus {
    -webkit-box-shadow: 0 0 0 30px #1a1a1a inset !important;
    -webkit-text-fill-color: white !important;
  }

  /* Estilo para el checkbox */
  input[type="checkbox"] {
    accent-color: #00ff9d;
  }
</style>

<script>
  document.getElementById('loginForm')?.addEventListener('submit', (e) => {
    e.preventDefault();
    const formData = new FormData(e.target as HTMLFormElement);
    const email = formData.get('email');
    const password = formData.get('password');
    
    // Aquí iría la lógica de autenticación
    console.log('Login attempt:', { email, password });
  });
</script> 